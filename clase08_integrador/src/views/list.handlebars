{{!-- listar todos --}}

<h2>list pokemons</h2>

<div>
    {{#each pokemons}}
    <div>
        <a href="/pokemon/{{this.name}}">
            <b>{{this.name}}</b>
            <img src="{{this.photo}}" height="50">
            <i>{{this.type}}</i>
        </a>
        <a href="/pokemon/delete/{{this._id}}">borrar</a>
    </div>
    {{/each}}
</div>